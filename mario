<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mario Game</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            overflow: hidden; /* Para impedir a rolagem da p√°gina */
        }
        #game-container {
            width: 800px;
            height: 600px;
            background-color: #000;
            position: relative;
        }
        #mario {
            width: 50px;
            height: 50px;
            background-color: red;
            position: absolute;
            bottom: 0;
            left: 0;
        }
    </style>
</head>
<body>
    <div id="game-container">
        <div id="mario"></div>
    </div>

    <script>
        document.addEventListener("keydown", function(event) {
            moveMario(event.keyCode);
        });

        function moveMario(keyCode) {
            var mario = document.getElementById("mario");
            var marioPosition = mario.getBoundingClientRect();

            switch(keyCode) {
                case 37: // left arrow
                    if (marioPosition.left > 0) {
                        mario.style.left = (marioPosition.left - 10) + "px";
                    }
                    break;
                case 39: // right arrow
                    if (marioPosition.right < 800) {
                        mario.style.left = (marioPosition.left + 10) + "px";
                    }
                    break;
            }
        }
    </script>
</body>
</html>
